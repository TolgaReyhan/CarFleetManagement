@model FuelExpenseViewModel
@{
    ViewData["Title"] = "Добавяне на разход за гориво";
}

<div class="container mt-4">
    <h2 class="mb-3">@ViewData["Title"]</h2>
    <form asp-action="Add" method="post" class="border p-4 rounded shadow bg-light">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="CarId" class="form-label" style="color:black">Автомобил</label>
            <select asp-for="CarId" class="form-control" asp-items="ViewBag.Cars"></select>
            <span asp-validation-for="CarId" class="text-danger"></span>
        </div>
        <div class="mb-3" >
            <label asp-for="Liters" class="form-label" style="color:black">Литри</label>
            <input asp-for="Liters" class="form-control" />
            <span asp-validation-for="Liters" class="text-black"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Amount" class="form-label" style="color:black">Обща стойност (лв.):</label>
            <input asp-for="Amount" class="form-control" />
            <small class="form-text text-muted">Въведете общата сума, платена за гориво (в лева), а не цена на литър.</small>
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Date" class="form-label" style="color:black">Дата</label>
            <input asp-for="Date" type="date" class="form-control" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success">Добави</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Назад</a>
    </form>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
