@model FuelExpenseViewModel
@{
    ViewData["Title"] = "Редактиране на разход за гориво";
}
<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <form asp-action="Edit" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group mb-3">
            <label asp-for="CarId" class="form-label"></label>
            <select asp-for="CarId" class="form-control" asp-items="ViewBag.Cars"></select>
            <span asp-validation-for="CarId" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Liters" class="form-label"></label>
            <input asp-for="Liters" class="form-control" />
            <span asp-validation-for="Liters" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Amount" class="form-label">Обща стойност (лв.):</label>
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Date" class="form-label"></label>
            <input asp-for="Date" type="date" class="form-control" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Запази</button>
        <a asp-action="Index" class="btn btn-secondary">Назад</a>
    </form>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}