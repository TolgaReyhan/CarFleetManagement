@model List<FuelExpenseViewModel>

<div class="container mt-4">
    <h2 class="mb-3">Разходи за гориво</h2>
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Автомобил</th>
                <th>Литри</th>
                <th>Цена</th>
                <th>Дата</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var expense in Model)
            {
                <tr>
                    <td>@expense.CarId</td>
                    <td>@expense.Liters</td>
                    <td>@expense.Amount</td>
                    <td>@expense.Date.ToShortDateString()</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@expense.Id" class="btn btn-warning btn-sm" style="color: white">Редактирай</a>
                        <a asp-action="Details" asp-route-id="@expense.Id" class="btn btn-info btn-sm" style="color: white">Детайли</a>
                        <a asp-action="Delete" asp-route-id="@expense.Id" class="btn btn-danger btn-sm" style="color: white">Изтрий</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="@Url.Action("Add")" class="btn btn-primary mt-3">Добави разход за гориво</a>
</div>