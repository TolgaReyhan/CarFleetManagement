@model RepairExpenseViewModel
@{
    ViewData["Title"] = "Редактиране на ремонт";
}
<div class="container mt-4">
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="CarId"></label>
            <input asp-for="CarId" type="carid" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="CarDisplayName" class="control-label"></label>
            <select asp-for="CarDisplayName" class="form-control" asp-items="ViewBag.Cars"></select>
            <span asp-validation-for="CarDisplayName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Cost"></label>
            <input asp-for="Cost" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Запази</button>
    </form>
</div>