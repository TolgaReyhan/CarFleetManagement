@model RepairExpenseViewModel

<div class="container mt-4">
    <h2 class="mb-3">Добавяне на ремонт</h2>
    <form asp-action="Add" method="post" class="border p-4 rounded shadow bg-light">
        <div class="mb-3">
            <label class="form-label">Автомобил:</label>
            <input asp-for="CarId" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Описание:</label>
            <input asp-for="Description" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Цена:</label>
            <input asp-for="Cost" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Дата:</label>
            <input asp-for="Date" type="date" class="form-control" />
        </div>
        <button type="submit" class="btn btn-success">Добави</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Назад</a>
    </form>
</div>