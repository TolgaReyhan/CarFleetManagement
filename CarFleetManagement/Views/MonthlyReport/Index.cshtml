@model List<MonthlyReportViewModel>

<div class="container mt-4">
    <h2 class="mb-3">Месечни справки</h2>
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Автомобил</th>
                <th>Гориво (л)</th>
                <th>Гориво (цена)</th>
                <th>Изминати км</th>
                <th>Ремонти (брой)</th>
                <th>Ремонти (цена)</th>
                <th>Застраховки</th>
                <th>Месец</th>
                <th>Година</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var report in Model)
            {
                <tr>
                    <td>@report.CarId</td>
                    <td>@report.FuelLiters</td>
                    <td>@report.FuelCost</td>
                    <td>@report.TotalKilometers</td>
                    <td>@report.TotalRepairs</td>
                    <td>@report.RepairCost</td>
                    <td>@report.InsuranceCount</td>
                    <td>@report.Month</td>
                    <td>@report.Year</td>
                </tr>
            }
        </tbody>
    </table>
    <a href="@Url.Action("Add")" class="btn btn-primary">Добави справка.</a>
</div>