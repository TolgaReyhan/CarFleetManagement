@model MonthlyReportViewModel

<div class="container mt-4">
    <h2 class="mb-3">Добавяне на месечна справка</h2>
    <form asp-action="Add" method="post" class="border p-4 rounded shadow bg-light">
        <div class="mb-3">
            <label class="form-label">Автомобил:</label>
            <input asp-for="CarId" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Изразходвано гориво (литри):</label>
            <input asp-for="FuelLiters" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Разход за гориво (лв.):</label>
            <input asp-for="FuelCost" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Изминати километри:</label>
            <input asp-for="TotalKilometers" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Брой ремонти:</label>
            <input asp-for="TotalRepairs" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Разходи за ремонти (лв.):</label>
            <input asp-for="RepairCost" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Разход за застраховки (лв.):</label>
            <input asp-for="InsuranceCount" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Месец:</label>
            <input asp-for="Month" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Година:</label>
            <input asp-for="Year" class="form-control" />
        </div>
        <button type="submit" class="btn btn-success">Добави</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Назад</a>
    </form>
</div>