@model MonthlyReportViewModel
@{
    ViewData["Title"] = "Редактиране на месечен отчет";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="CarId" class="control-label"></label>
        <select asp-for="CarId" class="form-control" asp-items="ViewBag.Cars"></select>
        <span asp-validation-for="CarId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TotalKilometers"></label>
        <input asp-for="TotalKilometers" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="FuelLiters"></label>
        <input asp-for="FuelLiters" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="FuelCost"></label>
        <input asp-for="FuelCost" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="TotalRepairs"></label>
        <input asp-for="TotalRepairs" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="RepairCost"></label>
        <input asp-for="RepairCost" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="InsuranceCount"></label>
        <input asp-for="InsuranceCount" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Запази</button>
</form>