@model InsuranceExpenseViewModel
@{
    ViewData["Title"] = "Добавяне на застраховка";
}
<div class="container mt-4">
    <h2 class="mb-3">@ViewData["Title"]</h2>
    <form asp-action="Add" method="post" class="border p-4 rounded shadow bg-light">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="CarId" class="form-label" style="color:black"></label>
            <select asp-for="CarId" class="form-control" asp-items="ViewBag.Cars"></select>
            <span asp-validation-for="CarId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Provider" class="form-label" style="color:black"></label>
            <input asp-for="Provider" class="form-control" />
            <span asp-validation-for="Provider" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Amount" class="form-label" style="color:black"></label>
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="StartDate" class="form-label" style="color:black"></label>
            <input asp-for="StartDate" type="date" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="EndDate" class="form-label" style="color:black"></label>
            <input asp-for="EndDate" type="date" class="form-control" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success">Добави</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Назад</a>
    </form>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}