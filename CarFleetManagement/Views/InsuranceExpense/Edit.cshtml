@model InsuranceExpenseViewModel
@{
    ViewData["Title"] = "Редактиране на застраховка";
}
<div class="container mt-4">
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="CarId"></label>
            <select asp-for="CarId" class="form-control" asp-items="ViewBag.Cars"></select>
        </div>
        <div class="form-group">
            <label asp-for="Provider"></label>
            <input asp-for="Provider" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Amount"></label>
            <input asp-for="Amount" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="EndDate"></label>
            <input asp-for="EndDate" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Запази</button>
    </form>
</div>